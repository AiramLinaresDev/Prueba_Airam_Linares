<nav class="nav">
    <div class="logo">BrandName</div>
    <div class="nav-links">
        <a href="#">Home</a>
        <a href="#">Product</a>
        <a href="#">Pricing</a>
        <a href="#">Contact</a>
    </div>
    <div class="auth-links">
        <button class="login">Login</button>
        <button class="join">JOIN US <img src="/src/svg/arrow-join.svg" alt="->"></button>
    </div>
</nav>

<style>
    .nav {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .logo {
        font-size: 24px;
        font-weight: bold;
        color: white;
        margin-left: 10%;
        transition: font-size 0.5s ease-in-out;
    }

    .logo:hover {
        cursor: pointer;
        font-size: 30px;
    }

    .nav-links {
        display: flex;
        margin-left: 8%;
        margin-right: auto;
        gap: 20px;

        a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            position: relative;
        }

        a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: white;
            transition: width 0.5s ease-in-out;
        }

        a:hover::after {
            width: 100%;
        }
    }

    .auth-links {
        display: flex;
        align-items: center;
        gap: 30px;

    }
    .login {
        color: white;
        background-color: transparent;
        border: none;
        font-size: 16px;
        padding: 15px;
        border-radius: 5px;
        transition: background-color 200ms ease-in-out;
    }

    .login:hover {
        cursor: pointer;
        background-color: #8D5CF6;
    }

    .join {
        display: flex;
        align-items: center;
        gap: 20px;
        color: white;
        background-color: #8D5CF6;
        border: 1px solid #8D5CF6;
        font-size: 16px;
        padding: 15px;
        border-radius: 5px;
        transition: all 200ms ease-in-out;
    }

    .join:hover {
        cursor: pointer;
        background-color: transparent;
    }
</style>
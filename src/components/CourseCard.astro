---
interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---

<div class="course-card">
    <img src={image} alt={title} />
    <h5>{title}</h5>
    <hr>
    <p>{description}</p>
</div>

<style>
    .course-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        margin: 1rem;
        width: 25%;
        height: 25%;
    }

    .course-card h5 {
        font-size: 1rem;
        font-weight: 600;
        margin: 1rem 0 0.5rem 0;
        color: black;
    }
    .course-card p {
        font-size: 0.8rem;
        color: #6B7280;
        text-align: center;
    }

    .course-card hr {
        width: 20%;
        border-top: 2px solid #E74040; /* Color y grosor de la l√≠nea */
        margin: 5%;
    }
</style>
<style>
    section {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        width: 100%;
        margin-top: 20%;
    }
    .advice {
        margin: 0 30% 5% 30%;
        text-align: center;
    }
    .advice h6 {
        color: #8D5CF6;
    }
    .advice h2 {
        font-size: 2.5rem;
        font-weight: 700;
        margin: -2% 0 -2% 0;
    }
    .slider2 {
        overflow: hidden;
        width: 60%;
        position: relative;
        border-left: 1px solid #fff;
        border-right: 1px solid #fff;
    }
    .slider-inner2 {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }
    .slider-inner2 > * {
        flex: 0 0 50%;
        box-sizing: border-box;
        padding: 10px;
    }
</style>
<script>

    let sliderInner = document.querySelector('.slider-inner2');
    let index = 1;
    let percentage = index * -50;
    sliderInner.style.transform = `translateX(${percentage}%)`;

    setInterval(() => {
        let percentage = index * -50;
        sliderInner.style.transform = `translateX(${percentage}%)`;
        index++;
        if (index == 3) {
            index = 0;
        }
        
    }, 5000);
</script>
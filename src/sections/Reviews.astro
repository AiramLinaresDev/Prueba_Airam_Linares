<style>
    section {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        width: 100%;
        margin: 0 0 25% 0;
    }
    .advice {
        margin: 0 30% 5% 30%;
        text-align: center;

        h6 {
            color: #8D5CF6;
        }

        h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin: -2% 0 -2% 0;
        }
    }

    .slider2 {
        overflow: hidden;
        width: 60%;
        position: relative;
        border-left: 1px solid #fff;
        border-right: 1px solid #fff;
    }
    .slider-inner2 {
        display: flex;
        transition: transform 0.5s ease-in-out;
        align-items: center;
        justify-content: center;
        gap: 2rem;
    }
</style>
<script>
    let sliderInner = document.querySelector('.slider-inner2') as HTMLElement;
    let index = 0;
    let percentage = index * -50;
    if (sliderInner) {
        sliderInner.style.transform = `translateX(${percentage}%)`;
    }

    setInterval(() => {
        let percentage = index * -50;
        if (sliderInner) {
            sliderInner.style.transform = `translateX(${percentage}%)`;
        }
        index++;
        if (index == 2) {
            index = -1;
        }
        
    }, 5000);
</script>